{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outFile": "./main.js",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
